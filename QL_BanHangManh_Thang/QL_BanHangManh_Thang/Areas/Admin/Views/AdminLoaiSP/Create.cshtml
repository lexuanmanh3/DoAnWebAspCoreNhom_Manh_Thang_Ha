
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model LoaiSP
<main id="main" class="main">
    <form asp-action="Create" method="post">
        <h2>Thêm Loại sản phẩm</h2>
        <hr />
        <div class="form-group">
            <label class="mb-2">Id loại sản phẩm</label>
            <input asp-for="IdLoaiSP" class="form-control mb-2" />
            <span asp-validation-for="IdLoaiSP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Tên danh mục sản phẩm</label>
            <input asp-for="TenLoaiSP" class="form-control mb-2" />
            <span asp-validation-for="TenLoaiSP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Danh mục sản phẩm</label>
            <select asp-for="IdDanhMucSP" asp-items="@ViewBag.xListDanhMucSP" class="form-control mb-3">
            </select>
            <span asp-validation-for="IdDanhMucSP" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary"> Save </button>
        <a asp-action="Index" class="btn btn-secondary"> Back To List</a>
    </form>
    <hr />
