
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model DanhMucSP
    <main id="main" class="main">
        <form asp-action="Edit" method="post">
            <h2>Danh mục sản phẩm</h2>
            <hr />
            <input type="hidden" asp-for="IdDanhMucSP" />
            <div class="form-group">
                <label class="mb-2">Id danh mục sản phẩm</label>
                <input asp-for="IdDanhMucSP" class="form-control" />
                <span asp-validation-for="IdDanhMucSP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="mb-2">Display Order</label>
                <input asp-for="TenDanhMucSP" class="form-control mb-3" />
                <span asp-validation-for="TenDanhMucSP" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"> Update </button>
            <a asp-action="Index" class="btn btn-secondary"> Back to List</a>
        </form>
    </main>