
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model SanPham

@{
    ViewData["Title"] = "Create";
}
<main class="main" id="main">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row mt-5">
            <h2>Thêm sản phẩm</h2>
            <hr />
        </div>
        <div class="form-group">
            <label class="mb-2">Tên sản phẩm</label>
            <input asp-for="TenSanPham" class="form-control" />
            <span asp-validation-for="TenSanPham" class="text-danger mb-3"></span>
        </div>

        <div class="form-group">
            <label class="mb-2">Giá</label>
            <input asp-for="Gia" class="form-control" />
            <span asp-validation-for="Gia" class="text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Mô tả sản phẩm</label>
            <textarea asp-for="MoTa" class="form-control mb-3" ></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Loại sản phẩm phẩm</label>
            <select asp-for="IdLoaicSP" asp-items="@ViewBag.xListLoaiSP" class="form-control mb-3">
            </select>
            <span asp-validation-for="IdLoaicSP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Màu sắc</label>
            <select asp-for="IdMauSac" asp-items="@ViewBag.xListMauSac" class="form-control mb-3"></select>
            <span asp-validation-for="IdMauSac" class="text-danger "></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Số lượng</label>
            <input asp-for="TonKho.SoLuong" class="form-control">
            <span asp-validation-for="TonKho.SoLuong" class="text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label class="mb-2">Hình ảnh</label>
            <input name="file" type="file" class="form-control mb-3" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </form>
</main>

