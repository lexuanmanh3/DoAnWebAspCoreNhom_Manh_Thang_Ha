
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model SanPham
    <main class="main" id="main">

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row mt-5">
                <h2>Sửa sản phẩm </h2>
                <hr />
            </div>
            <input asp-for="Anh" type="hidden" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="mb-2">Id sản phẩm</label>
                        <input asp-for="IdSanPham" class="form-control mb-3" readonly="False" />
                        <span asp-validation-for="IdSanPham" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Tên sản phẩm</label>
                        <input asp-for="TenSanPham" class="form-control mb-3" />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Giá</label>
                        <input asp-for="Gia" class="form-control mb-3"></input>
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control  mb-3" ></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Loại sản phẩm</label>
                        <select asp-for="IdLoaicSP" asp-items="@ViewBag.ListLoai" class="form-control mb-3">
                        </select>
                        <span asp-validation-for="IdLoaicSP" class="text-danger mb-3"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Màu sắc</label>
                        <select asp-for="IdMauSac" asp-items="@ViewBag.ListMau" class="form-control mb-3">
                        </select>
                        <span asp-validation-for="IdMauSac" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2">Số lượng</label>
                        <input asp-for="TonKho.SoLuong" class="form-control mb-3" />
                        <span asp-validation-for="TonKho.SoLuong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-2"> Ảnh mới</label>
                        <input name="file" type="file" class="form-control mb-3" />
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
                </div>
                <div class="col-md-4">
                    @if (Model.Anh != null)
                    {
                        <img src="/@Model.Anh" style="width:300px" />
                    }
                </div>
            </div>
        </form>
    </main>


